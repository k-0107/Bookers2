<div>
  <h1>User info</h1>
  <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
      <p>error</p>
      <%= message %>
    </div>
  <% end %>
  <%= form_with model: @user do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.file_field :profile_image, accept: ".jpg" %>
    <h4>Introduction</h4>
    <%= f.text_field :introduction %>
    <%= f.submit 'Update User' %>
  <% end %>
</div>